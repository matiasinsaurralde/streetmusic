<div id="bg">
    <h1>Log In</h1>

<%= form_for :session do |f| %>

    <div class="field">
        <%= f.label :email %> <br/>
        <%= f.text_field :email %>
    </div>
    <div class="field">
        <%= f.label :password %> <br/>
        <%= f.password_field :password %>
    </div>
    <div class="actions">
        <%= f.submit "Submit" %>
    </div>
<% end %>
</br>
<input type="submit" value="Back" onclick="window.location='/';"/>
